{
    "name": "cronbee",
    "version": "0.5.24",
    "main": "./lib/cronbee.js",
    "types": "./lib/cronbee.d.ts",
    "bin": {
        "cronbee": "index.js"
    },
    "author": {
        "name": "Alex Kit",
        "email": "alex.kit@atmajs.com"
    },
    "dependencies": {
        "alot": "^0.2.84",
        "appcfg": "^0.4.53",
        "atma-io": "^1.2.34",
        "atma-utest": "^0.21.14",
        "atma-utils": "^0.1.38",
        "everlog": "^1.0.5",
        "memd": "^0.2.90",
        "shellbee": "^0.5.14"
    },
    "devDependencies": {
        "@types/node": "^12.6.2",
        "app-bundler": "0.0.70",
        "atma": "^0.12.18",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3",
        "typedoc": "^0.21.5"
    },
    "scripts": {
        "build": "app-bundler && npm run dts",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "watch": "app-bundler -watch",
        "release": "echo \"Run atma pub -m \"message\"\"",
        "test": "atma test",
        "server": "atma server",
        "typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json && atma task copy"
    },
    "app-bundler": {
        "apps": {
            "cli": {
                "file": "src/cli.ts",
                "outputMain": "lib/cli.js"
            },
            "module": {
                "file": "src/export.ts",
                "outputMain": "lib/cronbee.js"
            }
        },
        "common": {
            "package": {
                "module": "commonjs",
                "commonjs": {
                    "output": "simplified"
                }
            },
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "dynamicDependencies": [
                "shellbee",
                "everlog",
                "memd",
                "appcfg",
                "alot",
                "atma-io",
                "atma-utils",
                "^path$",
                "child_process"
            ],
            "middlewares": {
                "ts": [
                    "atma-loader-ts:read"
                ]
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "atma-utest": {
                "include": {
                    "amd": true,
                    "extentionDefault": {
                        "js": "ts"
                    }
                }
            },
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "commonjs"
                        },
                        "sourceMap": false
                    }
                }
            }
        },
        "tasks": {
            "copy": {
                "files": {
                    "./assets/background.jpg": "./docs/assets/background.jpg"
                }
            }
        }
    }
}
